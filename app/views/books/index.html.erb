<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<main>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>body</th>
  </tr>
  <% @books.each do |book| %>
   <tr>
    <tb><%= book.title %></tb>
    <tb><%= book.body %></tb>
    <tb><%= link_to "Show",book_path(book) %></tb>
    <tb><%= link_to "Edit",edit_book_path(book) %></tb>
    <tb><%= link_to "Destroy",book_path(book), method: :delete %></tb>
   </tr>
  <% end %>
</table>

<% if flash.now[:error] %>
  <p><%= flash.now[:error] %></p>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %></p>
<% end %>
</main>